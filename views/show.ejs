<%- include("partials/header.ejs")  %> 

<section id="banner">
    <h1 class="banner-name">Figo Electronics</h1>
    <p class="story">Welcome to India's first online Electronics Shop</p>
</section>

<section id="all-products">
    <h2>All Products</h2>
    <div class="row text-centre" style="display: flex; flex-wrap: wrap;">
        <% all.forEach(function(allItems){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <img  class="card-img-top" style="height: 200px;width: 250px;" src="<%= allItems.image %>">
                        <div class="card-title">
                            <h2><%= allItems.title %> </h2>
                        </div>
                        <div class="card-text">
                            <p><%= allItems.description %> </p>
                        </div> 
                    </div>
                    <p id="cart-text">Add To Cart</p>
                    <div id="items-added-text">
                        No of items: 
                        <input type="text" name="name" value="0" readonly>
                    </div>
                    <button class="add-btn btn btn-success">+</button>
                    <button class="sub-btn btn btn-danger">-</button>
                    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
                </div>
            </div>
      <%  }) %> 
    </div>
</section>
</body>

</html>
<script>
    $(".add-btn").on("click",function(e)
    {
        e.preventDefault();
        var input=$(this).closest('div').find('input');
        var value=parseInt(input.val());

        if(value<100)
        {
            value=value+1
        }
        else
        {
            value=100
        }
        input.val(value)
    })    
    $(".sub-btn").on("click",function(e)
    {
        e.preventDefault();
        var input=$(this).closest('div').find('input');
        var value=parseInt(input.val());

        if(value>0)
        {
            value=value-1
        }
        else
        {
            value=0
        }
        input.val(value)

    })
</script>

